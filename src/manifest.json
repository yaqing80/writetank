{
    "manifest_version": 3,
    "name": "WriteTank: Academic Writing Assistant for LaTeX",
    "short_name": "WriteTank",
    "description": "Privacy-first assistant for academic and professional writing powered by local LLMs.",
    "version": "0.0.1",
  
    "action": {
      "default_title": "WriteTank",
      "default_popup": "popup.html"
    },
  
    "background": {
      "service_worker": "background.js",
      "type": "module"
    },
  
    "permissions": [
      "storage",
      "activeTab",
      "scripting",
      "alarms"
    ],
  
    "host_permissions": [
      "https://www.overleaf.com/*",
      "http://localhost/*"
    ],
  
    "content_scripts": [
      {
        "matches": ["https://www.overleaf.com/*"],
        "js": ["content.js"],
        "css": ["overlay.css"],
        "run_at": "document_idle"
      }
    ],
  
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }