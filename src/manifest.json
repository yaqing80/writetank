{
    "manifest_version": 3,
    "name": "WriteTank: Academic Writing Assistant for LaTeX",
    "short_name": "WriteTank",
    "description": "Privacy-first assistant for academic and professional writing powered by local LLMs.",
    "version": "0.0.1",
  
        "action": {
      "default_title": "WriteTank",
      "default_popup": "src/popup.html"
    },
    
    "options_page": "src/options.html",

    "background": {
      "service_worker": "src/background.ts",
      "type": "module"
    },
  
    "permissions": [
      "storage",
      "activeTab",
      "scripting",
      "alarms"
    ],
  
    "host_permissions": [
      "https://www.overleaf.com/*",
      "http://localhost/*"
    ],
  
    "content_scripts": [
      {
        "matches": ["https://www.overleaf.com/*"],
        "js": ["src/content.ts"],
        "css": ["src/overlay.css"],
        "run_at": "document_idle"
      }
    ],
  
    "icons": {
      "16": "icons/icon_1x.png",
      "48": "icons/icon_2x.png",
      "128": "icons/icon_3x.png"
    }
  }